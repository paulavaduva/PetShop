@model PetShop.DTOs.GroupCategoryDto
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = Model.Name;
}

<div class="container my-4">
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary me-3">
            <i class="fa-solid fa-arrow-left"></i> Înapoi
        </a>
        <div>
            <h1 class="display-4 mb-0">@Model.Name</h1>
            <small class="text-muted">@Model.Products.Count() produse găsite</small>
        </div>
    </div>

    <div class="row">
        @if (Model.Products.Any())
        {
            @foreach (var item in Model.Products)
            {
                <div class="col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm product-card position-relative">

                        <a asp-action="Details" asp-route-id="@item.Id" class="stretched-link"></a>

                        <div class="card-img-wrapper" style="height: 250px; overflow: hidden; display: flex; align-items: center; justify-content: center; background-color: #f8f9fa;">
                            @if (item.ProductImage != null && item.ProductImage.Length > 0)
                            {
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.ProductImage)"
                                     class="card-img-top"
                                     alt="@item.Name"
                                     style="height: 100%; width: 100%; object-fit: cover;">
                            }
                            else
                            {
                                <div class="text-muted">Fără Imagine</div>
                            }
                        </div>

                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title text-dark fw-bold mb-0">@item.Name</h5>
                            </div>

                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="h4 mb-0 text-success">@item.Price Lei</span>
                                    @if (item.Stock > 0)
                                    {
                                        <small class="text-success"><i class="bi bi-check-circle-fill"></i> În Stoc</small>
                                    }
                                    else
                                    {
                                        <small class="text-danger"><i class="bi bi-x-circle-fill"></i> Stoc Epuizat</small>
                                    }
                                </div>

                                <div style="position: relative; z-index: 2;">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <div class="btn-group w-100" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                                <i class="fa-solid fa-pen"></i> Editează
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                                <i class="fa-solid fa-trash"></i> Șterge
                                            </a>
                                        </div>
                                    }
                                    
                                        @if (item.Stock > 0)
                                        {
                                            <form asp-controller="Orders" asp-action="AddToCart" method="post">
                                                <input type="hidden" name="productId" value="@item.Id" />
                                                <input type="hidden" name="quantity" value="1" />

                                                <button type="submit" class="btn btn-success btn-lg w-100">
                                                    <i class="fas fa-shopping-cart"></i> Adaugă În Coș
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <button class="btn btn-secondary btn-lg w-100" disabled>
                                                <i class="fas fa-ban"></i> Stoc Epuizat
                                            </button>
                                        }
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <h3 class="text-muted">Nu există produse în această categorie momentan.</h3>
                <a asp-action="Index" class="btn btn-primary mt-3">Vezi toate produsele</a>
            </div>
        }
    </div>
</div>

<style>
    .product-card {
        transition: transform 0.2s;
        cursor: pointer;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }
</style>