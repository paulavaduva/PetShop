@model PetShop.DTOs.ProductDto

@{
    ViewData["Title"] = "Adaugă Produs";
}

<h1>Adaugă Produs</h1>

<h4>Detalii Produs</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">
                    <i class="fa-solid fa-tag me-1 text-muted"></i> Nume Produs
                </label>
                <input asp-for="Name" class="form-control" placeholder="Introdu numele produsului" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-bold">
                    <i class="fa-solid fa-align-left me-1 text-muted"></i> Descriere
                </label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="O scurtă descriere..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label fw-bold">
                    <i class="fa-solid fa-money-bill me-1 text-muted"></i> Preț
                </label>
                <div class="input-group">
                    <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="0.00" />
                    <span class="input-group-text">Lei</span>
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Stock" class="form-label fw-bold">
                    <i class="fa-solid fa-boxes-stacked me-1 text-muted"></i> Stoc
                </label>
                <input asp-for="Stock" class="form-control" type="number" placeholder="0" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ImageFile" class="form-label fw-bold">
                    <i class="fa-regular fa-image me-1 text-muted"></i> Imagine
                </label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="CategoryId" class="form-label fw-bold">
                    <i class="fa-solid fa-list me-1 text-muted"></i> Categorie
                </label>
                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                    <option value="">-- Selectează Categoria --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary w-100 py-2 fw-bold shadow-sm">
                    <i class="fa-solid fa-plus me-2"></i> Creează Produs
                </button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
        <i class="fa-solid fa-arrow-left me-1"></i> Înapoi la Listă
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}