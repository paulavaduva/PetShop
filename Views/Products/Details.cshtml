@model PetShop.DTOs.ProductDto
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Detalii Produs";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container my-5">
    <div class="card shadow-lg border-0">
        <div class="row g-0">

            <div class="col-md-6 d-flex align-items-center justify-content-center bg-light">
                <div class="p-4 w-100">
                    <div class="mb-3 text-start">
                        <a asp-action="Index" class="text-decoration-none text-muted">
                            <i class="fa-solid fa-arrow-left-long"></i> Inapoi
                        </a>
                    </div>
                    <div class="text-center">
                        @if (Model.ProductImage != null && Model.ProductImage.Length > 0)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ProductImage)"
                                 class="img-fluid rounded shadow-sm"
                                 alt="@Model.Name"
                                 style="max-height: 500px; width: auto; object-fit: contain;">
                        }
                        else
                        {
                            <div class="text-muted text-center py-5">
                                <i class="bi bi-image" style="font-size: 4rem;"></i>
                                <p class="mt-2">Fără Imagine</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card-body p-5 d-flex flex-column h-100">

                    <div class="mb-auto">
                        <span class="badge bg-primary mb-2">@Model.CategoryName</span>

                        <h1 class="display-5 fw-bold text-dark mb-3">@Model.Name</h1>

                        <div class="d-flex align-items-center mb-4">
                            <h3 class="text-success mb-0 me-4">@Model.Price RON</h3>

                            @if (Model.Stock > 0)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> In Stoc
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="bi bi-x-circle"></i> Stoc Epuizat
                                </span>
                            }
                        </div>

                    </div>

                    <hr class="my-4">

                    <div class="action-buttons">

                        @if (User.IsInRole("Admin"))
                        {

                            <div class="d-grid gap-2">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">
                                    <i class="fa-solid fa-pen"></i> Editeaza 
                                </a>
                                <div class="d-flex gap-2">
                                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger flex-grow-1">
                                        <i class="fa-solid fa-trash"></i> Sterge
                                    </a>
                                </div>
                            </div>
                        }
                        

                        @if (Model.Stock > 0)
                        {
                            <form asp-controller="Orders" asp-action="AddToCart" method="post">
                                <input type="hidden" name="bookId" value="@Model.Id" />

                                <div class="row align-items-end">
                                    <div class="col-4">
                                        <label for="quantity" class="form-label">Cantitate:</label>
                                        <input type="number" name="quantity" id="quantity" class="form-control form-control-lg" value="1" min="1" max="@Model.Stock">
                                    </div>
                                    <div class="col-8">
                                        <button type="submit" class="btn btn-success btn-lg w-100">
                                            <i class="fas fa-shopping-cart"></i> Add to cart
                                        </button>
                                    </div>
                                </div>
                            </form>
                        }
                        else
                        {
                            <button class="btn btn-secondary btn-lg w-100" disabled>
                                <i class="fas fa-ban"></i> Sold out
                            </button>
                        }
                    </div>

                    <hr class="my-4" style="border-top: 2px solid #ccc;" />
                    <div>
                        <h5><i class="fas fa-align-left"></i> Description:</h5>
                        <p style="white-space: pre-line;">@Model.Description</p>
                    </div>

                </div>

            </div>

        </div>
    </div>
</div>