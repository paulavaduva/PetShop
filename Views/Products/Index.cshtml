@model IEnumerable<PetShop.DTOs.ProductDto>
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Magazin Produse";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Produse</h1>

        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Adauga Produs Nou
            </a>
        }
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card h-100 shadow-sm product-card position-relative">

                    <a asp-action="Details" asp-route-id="@item.Id" class="stretched-link"></a>

                    <div class="card-img-wrapper" style="height: 250px; overflow: hidden; display: flex; align-items: center; justify-content: center; background-color: #f8f9fa;">
                        @if (item.ProductImage != null && item.ProductImage.Length > 0)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.ProductImage)"
                                 class="card-img-top"
                                 alt="@item.Name"
                                 style="height: 100%; width: 100%; object-fit: cover;">
                        }
                        else
                        {
                            <div class="text-muted">Fara Imagine</div>
                        }
                    </div>

                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start">
                            <h5 class="card-title text-dark fw-bold">@item.Name</h5>
                            <span class="badge bg-primary">@item.CategoryName</span>
                        </div>

                        <p class="card-text text-muted text-truncate" title="@item.Description">
                            @item.Description
                        </p>

                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="h4 mb-0 text-success">@item.Price RON</span>
                                @if (item.Stock > 0)
                                {
                                    <small class="text-success"><i class="bi bi-check-circle-fill"></i> In Stoc</small>
                                }
                                else
                                {
                                    <small class="text-danger"><i class="bi bi-x-circle-fill"></i> Stoc Epuizat</small>
                                }
                            </div>

                            <div style="position: relative; z-index: 2;">

                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="btn-group w-100" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                            <i class="fa-solid fa-pen"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                            <i class="fa-solid fa-trash"></i> Sterge
                                        </a>
                                    </div>
                                }
                                
                                    
                                    @if (item.Stock > 0)
                                    {
                                        <form asp-controller="Orders" asp-action="AddToCart" method="post">
                                            
                                            @* <input type="hidden" name="productId" value="@item.Id" />
                                            <input type="hidden" name="quantity" value="1" /> *@

                                            <button type="submit" class="btn btn-success btn-lg w-100">
                                                <i class="fas fa-shopping-cart"></i> Add to cart
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary btn-lg w-100" disabled>
                                            <i class="fas fa-ban"></i> Sold out
                                        </button>
                                    }
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .product-card {
        transition: transform 0.2s;
        cursor: pointer;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }
</style>