@model PetShop.Models.Category

@{
    ViewData["Title"] = "Adaugă Categorie";
}

<h1>Adaugă Categorie</h1>

<h4>Detalii Categorie</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">
                    <i class="fa-solid fa-tag me-1 text-muted"></i> Nume Categorie
                </label>
                <input asp-for="Name" class="form-control" placeholder="Introdu numele categoriei" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary w-100 py-2 fw-bold shadow-sm">
                    <i class="fa-solid fa-plus me-2"></i> Creează Categorie
                </button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
        <i class="fa-solid fa-arrow-left me-1"></i> Înapoi la Listă
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}