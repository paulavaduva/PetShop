@model PetShop.Models.Category

@{
    ViewData["Title"] = "Șterge Categorie";
}

<h1>Șterge Categorie</h1>

<div class="alert alert-warning border-0 shadow-sm" role="alert">
    <h4 class="alert-heading"><i class="fa-solid fa-triangle-exclamation me-2"></i> Ești sigur?</h4>
    <p class="mb-0">Această acțiune este ireversibilă. Ești sigur că vrei să ștergi această categorie?</p>
</div>

<div>
    <h4>Detalii Categorie</h4>
    <hr />

    <dl class="row align-items-center">
        <dt class="col-sm-3 fw-bold">
            <i class="fa-solid fa-tag me-1 text-muted"></i> @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <div class="mt-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-danger px-4 fw-bold shadow-sm">
                <i class="fa-solid fa-trash-can me-2"></i> Șterge Definitiv
            </button>

            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                <i class="fa-solid fa-arrow-left me-1"></i> Înapoi la Listă
            </a>
        </form>
    </div>
</div>