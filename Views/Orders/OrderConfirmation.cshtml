@model PetShop.Models.Order

@{
    ViewData["Title"] = "Order Confirmation";
}

<style>
    :root {
        --primary-color: #ff9f1c; /* Portocaliu */
        --secondary-color: #2b2d42; /* Teal */
        --text-dark: #2b2d42;
        --bg-light: #f8f9fa;
    }

    body {
        background-color: #f4f7f6;
    }

    .confirmation-card {
        background: #fff;
        border: none;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        overflow: hidden;
        margin-bottom: 2rem;
    }

    .success-header {
        background: linear-gradient(135deg, var(--secondary-color) 0%, #2b2d42 100%);
        color: white;
        padding: 3rem 2rem;
        text-align: center;
        position: relative;
    }

    .success-icon-wrapper {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        backdrop-filter: blur(5px);
    }

    .success-icon {
        font-size: 3rem;
        color: #fff;
    }

    .order-details-section {
        padding: 2.5rem;
    }

    .info-label {
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #6c757d;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .info-value {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 1.5rem;
    }

    .item-row {
        display: flex;
        align-items: center;
        padding: 1rem 0;
        border-bottom: 1px dashed #e9ecef;
    }

        .item-row:last-child {
            border-bottom: none;
        }

    .item-image {
        width: 60px;
        height: 60px;
        border-radius: 10px;
        background-color: #f8f9fa;
        object-fit: cover;
        margin-right: 1rem;
    }

    .total-badge {
        background-color: var(--bg-light);
        padding: 1rem;
        border-radius: 12px;
        text-align: right;
    }

    .btn-home {
        background-color: var(--primary-color);
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s;
    }

        .btn-home:hover {
            background-color: #e68a0d;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 159, 28, 0.3);
            color: white;
        }
</style>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="confirmation-card fade-in-up">
                <div class="success-header">
                    <div class="success-icon-wrapper">
                        <i class="fa-solid fa-check success-icon"></i>
                    </div>
                    <h2 class="fw-bold mb-2">Order Confirmed!</h2>
                    <p class="mb-0 opacity-75">Thank you for shopping with us. Your furry friend will be happy!</p>
                </div>

                <div class="order-details-section">
                    <div class="row mb-4">
                        <div class="col-md-6 border-end-md">
                            <div class="info-label">Order Number</div>
                            <div class="info-value">#@Model.Id</div>

                            <div class="info-label">Date Placed</div>
                            <div class="info-value">@Model.Date.ToLocalTime().ToString("dd MMMM yyyy, HH:mm")</div>

                            <div class="info-label">Status</div>
                            <div class="info-value">
                                <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">
                                    @Model.statusOrder
                                </span>
                            </div>
                        </div>

                        <div class="col-md-6 ps-md-4 mt-4 mt-md-0">
                            <div class="info-label"><i class="fa-solid fa-location-dot me-1"></i> Shipping To</div>
                            @if (Model.Address != null)
                            {
                                <div class="text-dark fw-bold mb-1">Phone Number: @Model.Address.PhoneNumber</div>
                                <div class="text-muted">
                                    @Model.Address.Street<br>
                                    @Model.Address.City, @Model.Address.County<br>
                                    @Model.Address.ZipCode
                                </div>
                            }
                            else
                            {
                                <div class="text-muted fst-italic">Address details not available.</div>
                            }
                        </div>
                    </div>

                    <hr class="my-4 opacity-25">

                    <h5 class="fw-bold mb-3">Items Ordered</h5>
                    <div class="mb-4">
                        @if (Model.OrderItems != null)
                        {
                            foreach (var item in Model.OrderItems)
                            {
                                <div class="item-row">
                                    @if (item.Product?.ProductImage != null)
                                    {
                                        <img src="data:image/png;base64,@Convert.ToBase64String(item.Product.ProductImage)" class="item-image shadow-sm" alt="@item.Product.Name" />
                                    }
                                    else
                                    {
                                        <div class="item-image d-flex align-items-center justify-content-center text-muted border">
                                            <i class="fa-solid fa-paw"></i>
                                        </div>
                                    }

                                    <div class="flex-grow-1">
                                        <h6 class="mb-0 fw-bold">@(item.Product?.Name ?? "Unknown Product")</h6>
                                        <small class="text-muted">Quantity: @item.Quantity</small>
                                    </div>

                                    <div class="fw-bold text-end">
                                        @(((item.Product?.Price ?? 0) * item.Quantity).ToString("0.00")) Lei
                                    </div>
                                </div>
                            }
                        }
                    </div>

                    <div class="total-badge">
                        <div class="d-flex justify-content-end align-items-center">
                            <span class="text-muted me-3">Total Amount Paid:</span>
                            <span class="fs-4 fw-bold text-primary">@((Model.TotalPrice ?? 0).ToString("0.00")) Lei</span>
                        </div>
                    </div>

                    <div class="text-center mt-5">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-home shadow">
                            <i class="fa-solid fa-house me-2"></i> Back to Home
                        </a>
                        <div class="mt-3">
                            <a asp-controller="Products" asp-action="Index" class="text-muted text-decoration-none small hover-underline">
                                Continue Shopping <i class="fa-solid fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>