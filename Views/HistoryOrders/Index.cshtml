@model IEnumerable<PetShop.Models.Order>

@{
    ViewData["Title"] = "Order History";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">
            <i class="fa-solid fa-clock-rotate-left text-warning me-2"></i> Order History
        </h2>

        @if (User.IsInRole("Admin"))
        {
            <span class="badge bg-danger">Admin View</span>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-light rounded-3 shadow-sm">
            <i class="fa-solid fa-folder-open text-muted mb-3" style="font-size: 3rem;"></i>
            <h3 class="fw-bold text-muted">No orders found.</h3>
            <p class="text-secondary">You haven't placed any orders yet.</p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-warning text-white fw-bold mt-2">
                Start Shopping
            </a>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="bg-light text-secondary text-uppercase small">
                        <tr>
                            <th class="py-3 ps-4">Order ID</th>
                            <th class="py-3">Date</th>
                            <th class="py-3">Total</th>
                            <th class="py-3">Status</th>

                            @if (User.IsInRole("Admin"))
                            {
                                <th class="py-3 text-primary"><i class="fa-solid fa-user"></i> Client</th>
                            }

                            <th class="py-3 text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">#@item.Id</td>

                                <td>
                                    <i class="fa-regular fa-calendar me-1 text-muted"></i>
                                    @item.Date.ToLocalTime().ToString("dd MMM yyyy, HH:mm")
                                </td>

                                <td class="fw-bold text-success">
                                    @((item.TotalPrice ?? 0).ToString("0.00")) Lei
                                </td>

                                <td>
                                    <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">
                                        @item.statusOrder
                                    </span>
                                </td>

                                @if (User.IsInRole("Admin"))
                                {
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold small">@(item.User?.LastName) @(item.User?.FirstName)</span>
                                            <span class="text-muted small" style="font-size: 0.75rem;">@(item.User?.Email)</span>
                                        </div>
                                    </td>
                                }

                                <td class="text-end pe-4">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                        Details <i class="fa-solid fa-circle-info ms-1"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}