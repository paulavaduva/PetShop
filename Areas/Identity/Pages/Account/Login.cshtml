@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="text-center mb-4">
                <div class="d-inline-flex align-items-center justify-content-center bg-primary text-white rounded-circle shadow-sm" style="width: 80px; height: 80px;">
                    <i class="fa-solid fa-right-to-bracket fs-2"></i>
                </div>
                <h2 class="fw-bold mt-3">Welcome Back!</h2>
                <p class="text-muted">Please log in to your account.</p>
            </div>

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-body p-4 p-md-5">

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center small" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">
                                <i class="fa-solid fa-envelope me-2 text-secondary"></i>Email
                            </label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">
                                <i class="fa-solid fa-key me-2 text-secondary"></i>Password
                            </label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label text-muted" asp-for="Input.RememberMe">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <button id="login-submit" type="submit" class="w-100 btn btn-primary btn-lg rounded-pill fw-bold shadow-sm mb-3">
                            <i class="fa-solid fa-arrow-right-to-bracket me-2"></i> Log in
                        </button>

                        <div class="text-center">
                            @* <p class="mb-1">
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none small text-muted">Forgot your password?</a>
                            </p> *@

                            <hr class="my-4 border-light">

                            <p class="mb-0 text-muted small">Don't have an account?</p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-secondary w-100 rounded-pill mt-2 fw-bold">
                                Create New Account
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="text-center mt-4">
                    <p class="text-muted small">Or log in with</p>
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-flex justify-content-center gap-2">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-light border shadow-sm rounded-circle p-2" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account" style="width: 50px; height: 50px;">
                                <i class="fa-brands fa-google text-danger fs-5"></i>
                            </button>
                        }
                    </form>
                </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}