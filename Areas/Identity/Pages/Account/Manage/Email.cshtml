@page
@model EmailModel
@{
    ViewData["Title"] = "Gestionează Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row justify-content-center">
    <div class="col-lg-10">

        <div class="mb-4">
            <h4 class="fw-bold"><i class="fa-solid fa-envelope-open-text text-primary me-2"></i>Setări Email</h4>
            <p class="text-muted">Actualizează adresa de email asociată contului tău.</p>
        </div>

        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>

            <div class="card border-0 bg-light rounded-3 mb-4">
                <div class="card-body p-3">
                    <label class="form-label text-uppercase text-muted small fw-bold mb-1">Email Actual</label>

                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0 text-muted">
                            <i class="fa-solid fa-at"></i>
                        </span>

                        <input asp-for="Email" class="form-control bg-white border-start-0 text-dark fw-bold" disabled />

                        @* @if (Model.IsEmailConfirmed)
                        {
                            <span class="input-group-text bg-success text-white border-success" title="Email Confirmat">
                                <i class="fa-solid fa-check me-1"></i> Verificat
                            </span>
                        }
                        else
                        {
                            <span class="input-group-text bg-warning text-dark border-warning" title="Email Neconfirmat">
                                <i class="fa-solid fa-triangle-exclamation"></i> Neverificat
                            </span>
                        } *@
                    </div>

                    @* @if (!Model.IsEmailConfirmed)
                    {
                        <div class="mt-2 text-end">
                            <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-sm btn-link text-decoration-none">
                                Retrimite email de verificare &rarr;
                            </button>
                        </div>
                    } *@
                </div>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" placeholder="Introdu noul email" />
                <label asp-for="Input.NewEmail">
                    <i class="fa-regular fa-pen-to-square me-2 text-secondary"></i>Introdu Email Nou
                </label>
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>

            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-primary btn-lg rounded-pill w-100 fw-bold shadow-sm">
                <i class="fa-solid fa-paper-plane me-2"></i> Schimbă Email
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}