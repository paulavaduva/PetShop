                    </div>
                </div>

                <a asp-controller="HistoryOrders" asp-action="Index" class="btn btn-info text-white fw-bold rounded-pill px-4">
                    Vezi Istoricul <i class="fa-solid fa-arrow-right ms-2"></i>
                </a>
            </div>
        </div> *@

    </div>
</div>

