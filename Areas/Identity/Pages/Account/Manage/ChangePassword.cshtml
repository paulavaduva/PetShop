@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Schimbă Parola";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row justify-content-center">
    <div class="col-lg-10">

        <div class="mb-4">
            <h4 class="fw-bold"><i class="fa-solid fa-shield-halved text-primary me-2"></i>Securitate Cont</h4>
            <p class="text-muted">Alege o parolă puternică pentru a-ți proteja contul.</p>
        </div>

        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Parola veche" />
                <label asp-for="Input.OldPassword">
                    <i class="fa-solid fa-key me-2 text-secondary"></i>Parola Actuală
                </label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Parola noua" />
                <label asp-for="Input.NewPassword">
                    <i class="fa-solid fa-lock me-2 text-secondary"></i>Parola Nouă
                </label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirma parola" />
                <label asp-for="Input.ConfirmPassword">
                    <i class="fa-solid fa-circle-check me-2 text-secondary"></i>Confirmă Parola Nouă
                </label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-lg rounded-pill w-100 fw-bold shadow-sm">
                <i class="fa-solid fa-floppy-disk me-2"></i> Actualizează Parola
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}